<!DOCTYPE html>
<html>
<head><title>Log in</title>
	<%= stylesheet_link_tag('login', :media=>'all')%>
</head>

<body>

	<div class="form" id="id1">
		<h1>Log in</h1>
 
		<%= form_for(:session, url: login_path) do |f| %> 
 	 		<%= f.email_field :email, :placeholder => "Email", id: "email_field" %><br>
  			<%= f.password_field :password, :placeholder => "Password", id:"Password_field" %>
  			<%= f.submit ">", class: "btn-submit", id: "Login_btn" %>
  			<br>
  			<hr>
  			<%= f.label :remember_me, class: "checkbox inline" do %>
		        <%= f.check_box :remember_me %>
		        <span>Remember me on this computer</span>
		    <% end %>
		<% end %>

		<p>New user? <%= link_to "Sign up now!", signup_path %></p>

		
    </div>
</body>
</html>